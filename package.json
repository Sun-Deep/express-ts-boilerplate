{
  "name": "@jasonpraful/api-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "DEBUG=boilerplate* NODE_ENV=development STANDALONE=true nodemon",
    "start": "'yarn build:prod' && NODE_ENV=production node ./dist/index.js",
    "prebuild:prod": "rimraf ./dist",
    "build:prod": "NODE_ENV=production esbuild ./src/index.ts --platform=node --bundle --outfile=./dist/index.js",
    "code:format": "prettier --write \"src/**/*.{ts,css,js,html}\"",
    "code:check": "prettier --check \"src/**/*.{ts,css,js,html}\"",
    "code:format:specific-file": "prettier --write ",
    "docker:build": "docker build . -f Dockerfile -t express-boilerplate",
    "docker:compose": "docker-compose up --remove-orphans --detach --force-recreate",
    "docker:run": "yarn build:prod && yarn docker:build && docker container run -p 8000:8000 --env-file .env express-boilerplate"
  },
  "keywords": [],
  "author": "Jason Praful Francis Xavier <jason.praful@gmail.com>",
  "dependencies": {
    "@sendgrid/mail": "^7.6.2",
    "aws-sdk": "^2.1125.0",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "dotenv": "^16.0.0",
    "express": "^4.18.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.11",
    "multer": "^1.4.4",
    "multer-s3": "^2.10.0",
    "socket.io": "^4.5.0",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/multer": "^1.4.7",
    "@types/node": "^17.0.30",
    "@types/socket.io": "^3.0.2",
    "@types/winston": "^2.4.4",
    "esbuild": "^0.14.38",
    "nodemon": "^2.0.16",
    "rimraf": "^3.0.2",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.14.1",
    "tslib": "^2.4.0",
    "typescript": "^4.6.4",
    "typescript-eslint-parser": "^22.0.0"
  }
}
